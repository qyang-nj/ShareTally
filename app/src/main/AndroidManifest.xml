<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.qingy.sharetally" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="me.qingy.sharetally.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="me.qingy.sharetally.TallyListActivity"
            android:label="@string/title_share_tally" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="me.qingy.sharetally.TallyEditActivity"
            android:label="@string/title_activity_tally_edit"
            android:parentActivityName="me.qingy.sharetally.TallyListActivity" />
        <activity
            android:name="me.qingy.sharetally.FriendListActivity"
            android:label="@string/title_friends" />
        <activity
            android:name="me.qingy.sharetally.FriendEditActivity"
            android:label="@string/title_activity_friend_edit"
            android:parentActivityName="me.qingy.sharetally.FriendListActivity" />
        <activity
            android:name="me.qingy.sharetally.RecordListActivity"
            android:label="" />
        <activity
            android:name="me.qingy.sharetally.RecordEditActivity"
            android:label="" />
        <activity
            android:name="me.qingy.sharetally.ResultActivity"
            android:label="" >
        </activity>
    </application>

</manifest>
